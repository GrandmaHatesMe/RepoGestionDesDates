<Window x:Class="GDate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GDate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#3A3A3A">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Test de la classe gestion des dates"
                   FontSize="26"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- Entrées -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Jour" Foreground="White"/>
                <TextBox x:Name="tbJour" Width="80"/>
            </StackPanel>

            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Mois" Foreground="White"/>
                <TextBox x:Name="tbMois" Width="80"/>
            </StackPanel>

            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Année" Foreground="White"/>
                <TextBox x:Name="tbAnnee" Width="100"/>
            </StackPanel>

            <Button Content="Lancer le test"
                    Width="130"
                    Margin="20,20,0,0"
                    Click="BtnTest_Click"/>
        </StackPanel>

        <!-- Résultats -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="No du jour de l'année : "
                           Foreground="White"
                           Width="200"/>
                <TextBox x:Name="tbJourAnnee" Width="150" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Année bissextile : "
                           Foreground="White"
                           Width="200"/>
                <TextBox x:Name="tbBissextile" Width="150" IsReadOnly="True"/>
            </StackPanel>
        </StackPanel>

        <!-- Message d'erreur -->
        <GroupBox Grid.Row="3" Header="Message d'erreur" Foreground="White">
            <TextBox x:Name="tbErreur"
                     Background="#B0B0B0"
                     IsReadOnly="True"
                     TextWrapping="Wrap"/>
        </GroupBox>
    </Grid>
</Window>
